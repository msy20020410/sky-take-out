<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.DishMapper">
    <resultMap id="BaseResultMap" type="com.sky.entity.Dish">
        <!--@mbg.generated-->
        <!--@Table dish-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="category_id" jdbcType="BIGINT" property="categoryId"/>
        <result column="price" jdbcType="DECIMAL" property="price"/>
        <result column="image" jdbcType="VARCHAR" property="image"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="create_user" jdbcType="BIGINT" property="createUser"/>
        <result column="update_user" jdbcType="BIGINT" property="updateUser"/>
    </resultMap>
    <!-- VO 映射 -->
    <resultMap id="DishVOMap" type="com.sky.vo.DishVO">
        <id column="id" property="id"/>

        <result column="name" property="name"/>
        <result column="category_id" property="categoryId"/>
        <result column="price" property="price"/>
        <result column="image" property="image"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="update_time" property="updateTime"/>
        <!-- 分类名称 -->
        <result column="categoryName" property="categoryName"/>
        <!-- 口味集合 -->
        <collection property="flavors"
                    ofType="com.sky.entity.DishFlavor">
            <id column="dishId" property="dishId"/>
            <id column="dfId" property="id"/>
            <result column="dfName" property="name"/>
            <result column="value" property="value"/>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id,
        `name`,
        category_id,
        price,
        image,
        description,
        `status`,
        create_time,
        update_time,
        create_user,
        update_user
    </sql>

    <select id="selectByIdWithFlavor" resultMap="DishVOMap">
        SELECT d.category_id,
               c.`name`   categoryName,
               d.description,
               d.id,
               d.image,
               d.`name`,
               d.price,
               d.`status`,
               d.update_time,
               df.dish_id dishId,
               df.id      dfId,
               df.`name`  dfName,
               df.`value`
        FROM dish d
                 INNER JOIN category c ON d.category_id = c.id
                 INNER JOIN dish_flavor df ON d.id = df.dish_id
        WHERE d.id = #{id}
    </select>
</mapper>
